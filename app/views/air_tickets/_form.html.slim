= bootstrap_form_for [@event, @participant, @air_ticket] do |f|
  .row
    = f.hidden_field :author_id, value: current_user.id
    .field.col-lg-4
      = f.text_field :arrive_at, value: f.object.arrive_at.nil? ? nil : l(f.object.arrive_at), required: true
    .field.col-lg-4
      = f.text_field :leave_at, value: f.object.leave_at.nil? ? nil : l(f.object.leave_at), required: true
  .row
    .field.col-lg-4
      = f.text_field :arrive_to, required: true
    .field.col-lg-4
      = f.text_field :leave_from, required: true
  .row
    .field.col-lg-4
      = f.text_field :estimated_at, value: f.object.estimated_at.nil? ? nil : l(f.object.estimated_at), required: true

  = f.submit nil, :class => 'btn btn-primary'
