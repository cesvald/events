= bootstrap_form_for @event do |f|
  .row
    .field.col-lg-3
      = f.text_field :name
    .field.col-lg-3
      = f.text_field :start_at 
    .field.col-lg-3
      = f.text_field :end_at
    .field.col-lg-3
      = f.number_field :deposit_amount
    .field.col-lg-3
      = f.check_box :international
  
  = f.primary
